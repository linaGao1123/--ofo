/* pages/mine/mine.wxss */
.container {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}
.useInfo {
  background-color: #fff;
  padding-top: 40rpx;
}
.useInfo image {
  height: 180rpx;
  width: 180rpx;
  display: block;
  border-radius: 50%;
  margin: 0 auto 40rpx;
}
.useInfo view {
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx 0;
}
.wallet {
  display: flex;
  background-color: #fff;
  padding: 40rpx;
  margin-top: 40rpx;
  justify-content: space-between;
  font-size: 32rpx;
}
button {
  position: fixed;
  bottom: 60rpx;
  width: 90%;
  left: 5%;
}


